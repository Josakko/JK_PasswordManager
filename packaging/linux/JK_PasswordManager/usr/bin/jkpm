#!/bin/bash

INSTDIR="$HOME/.local/share/jkpm"

if [[ ! -d $INSTDIR ]]; then
    echo "[+] Installing jkpm"
    cp -r /usr/share/jkpm-inst $INSTDIR
fi

cd $INSTDIR # || echo "[-] Installation failed, try to reinstall or refer to docs" && exit

cd ..
if [[ ! -f $INSTDIR/jkpm ]]; then
    rm -rf $INSTDIR
    cp -r /usr/share/jkpm-inst $INSTDIR
fi

cd jkpm
./jkpm "$@"

